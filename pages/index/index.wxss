.viewScanBle {
  border: 1px solid black;
  
}

.TableIsBleConnected {
  margin-top: 5px;
  position: absolute;
  display: inline-block;
  right: 15px;
}

.viewBleDeviceList, .viewBleServiceList, .viewBleCharacteristicList {

  padding: 7px 0 7px 0;

}

.viewBleDeviceList-hover, .viewBleServiceList-hover, .viewBleCharacteristicList-hover{
  opacity: 0.9;
  background-color: #d7d7d7
}

.ReadAndWriteButton {
  position: absolute;
  display: inline-block;
  right: 10px;
  
}

.fixedReadAndWrite {
  position: fixed;
  bottom: 0;
  width: 100%;
  background-color: #F0F0F0;
  padding: 10px;
  padding-bottom: 20px;
  margin-bottom: env(safe-area-inset-bottom);
  font-size: 14px;
  min-height: 500px;
  box-shadow: 0px 0px 3px 0px;

}

.readContent .notifyValueChange {
  margin-bottom: 5px;
}




/* 下拉框 */

.top-selected {
  width: 90%;
  display: flex;
  /*float: right;*/
  text-align: center;
  align-items: center;
  justify-content: space-between;
  border: 1px solid #ccc;
  padding: 0 10rpx;
  font-size: 30rpx;
  

}
.select_box {
  background-color: #fff;
  padding: 0 20rpx;
  width: 90%;
  
  position: relative;
  right: 0;
  z-index: 1;
  overflow: hidden;
  text-align: left;
  animation: myfirst 0.5s;
  font-size: 25rpx;
  color:#222
}

.select_one-hover {
  background-color: #ccc
}

.select_one {
  padding-left: 20rpx;
  width: 100%;
  height: 60rpx;
  position: relative;
  line-height: 60rpx;
  border-bottom: 1px solid #ccc;
}



/* 下拉过度效果 */

@keyframes myfirst {
  from {
    height: 0rpx;
  }

  to {
    height: 210rpx;
  }
}

